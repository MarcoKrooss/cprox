{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "esModuleInterop": true,
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": false,
        "strict": true,
        "outDir": "dist",
        "rootDir": "src",
        "noImplicitAny": true
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "test/**/*",
        "dist/**/*",
        "node_modules/**/*"
    ]
}